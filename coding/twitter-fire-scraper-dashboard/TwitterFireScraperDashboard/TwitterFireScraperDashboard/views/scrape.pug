extends layout

block content
	h1= title
	p= test_message
  
	section
		form(method="POST" action="/scrape" id="scrape")
			ul
				li
					p
						label(for="terms") Terms
					p
						textarea(type="text" name="terms" id="terms" form="scrape")
				li  
					p
						label(for="terms") Number of tweets
					p
						input(type="text" name="count")

			input(type="submit")

	if statuses
		section(class="tweets")
			ul
				each status in statuses
					li
						p= status._id
	if !statuses
		p No statuses to display.